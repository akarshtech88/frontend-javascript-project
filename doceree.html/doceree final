<!-- 
<script>
  gsap.registerPlugin(ScrollTrigger);

  const section = document.getElementById('circleStage');
  const stack   = document.getElementById('stack');

  const c1 = document.getElementById('c1');
  const c2 = document.getElementById('c2');
  const c3 = document.getElementById('c3');
  const c4 = document.getElementById('c4');

  const card1 = document.getElementById('card1');
  const card2 = document.getElementById('card2');
  const card3 = document.getElementById('card3');
  const card4 = document.getElementById('card4');

  gsap.defaults({ ease: "power2.out" });

  function coverScale(){
    const base = stack.offsetWidth;
    const target = Math.max(section.offsetWidth, section.offsetHeight);
    return (target / base) * 1.06; // tiny safety
  }

  function buildTL(){
    const s4 = coverScale();

    // init: c1..c3 normal; c4 will be handled separately to only zoom-cover
    gsap.set([c1,c2,c3], {autoAlpha:0, scale:0.5});
    gsap.set(c4, {autoAlpha:0, scale:0.2}); // hidden & tiny
    gsap.set([card1,card2,card3,card4], {autoAlpha:0, y:200});

    const tl = gsap.timeline({
      scrollTrigger:{
        trigger: section,
        start: "top top",
        end: "bottom+=480% top", // long, super-smooth scrub
        scrub: 1.6,
        pin: true,
        anticipatePin: 1,
        invalidateOnRefresh: true
      },
      smoothChildTiming: true
    });

    function revealPair(circle, fadePrev, card, finalY){
      tl.to(circle, {autoAlpha:1, scale:"+=0.22", duration:1.0}, "phase")
        .to(card,   {autoAlpha:1, y:finalY, duration:0.9}, "<0.15")
        .to(fadePrev, {autoAlpha:0.15, duration:0.8, ease:"power1.out"}, "<0.10");
    }

    // Phase 1
    tl.to(c1, {autoAlpha:1, scale:0.70, duration:1.0}, "phase0")
      .to(card1, {autoAlpha:1, y:0, duration:0.9}, "<0.15")
      .to(c1, {autoAlpha:0.18, duration:0.8, ease:"power1.out"}, "+=0.15");

    // Phase 2
    revealPair(c2, c1, card2, 40);

    // Phase 3
    tl.to(c3, {autoAlpha:1, scale:1.18, duration:1.1}, "phase2+=0.15")
      .to(card3, {autoAlpha:1, y:80, duration:0.9}, "<0.15")
      .to(c2, {autoAlpha:0.15, duration:0.8, ease:"power1.out"}, "<0.10");

    // Phase 4 — ONLY zoom-in cover for c4
    tl.to(c4, {
        autoAlpha: 1,
        scale: s4,
        duration: 1.2,
        ease: "power2.inOut"
      }, "phase3+=0.10")
      .to(card4, { autoAlpha:1, y:120, duration:0.9 }, "<0.10")
      .to([c1,c2,c3], { autoAlpha:0, duration:0.6, ease:"power1.out" }, "<0.0");

    return tl;
  }

  let master = buildTL();
  ScrollTrigger.addEventListener("refreshInit", () => {
    if (master) master.kill();
    master = buildTL();
  });

  // Optional: onion section fades in smoothly when it enters
  gsap.from(".onion-sec", {
    scrollTrigger: { trigger: ".onion-sec", start: "top 80%", toggleActions: "play none none reverse" },
    opacity: 0, y: 50, duration: 1
  });
</script>
 -->

<!-- 
corect one  -->
<!-- 
 <script>
  gsap.registerPlugin(ScrollTrigger);

  const section = document.getElementById('circleStage');
  const stack   = document.getElementById('stack');

  const c1 = document.getElementById('c1');
  const c2 = document.getElementById('c2');
  const c3 = document.getElementById('c3');
  const c5 = document.getElementById('c5'); // NEW circle
  const c4 = document.getElementById('c4');

  const card1 = document.getElementById('card1');
  const card2 = document.getElementById('card2');
  const card3 = document.getElementById('card3');
  const card5 = document.getElementById('card5'); // NEW card
  const card4 = document.getElementById('card4');

  gsap.defaults({ ease: "power2.out" });

  function coverScale(){
    const base = stack.offsetWidth;
    const target = Math.max(section.offsetWidth, section.offsetHeight);
    return (target / base) * 1.06; // tiny safety
  }

  function buildTL(){
    const s4 = coverScale();

    // init: set all circles and cards
    gsap.set([c1, c2, c3, c5], { autoAlpha: 0, scale: 0.5 });
    gsap.set(c4, { autoAlpha: 0, scale: 0.2 }); // hidden & tiny for zoom
    gsap.set([card1, card2, card3, card5, card4], { autoAlpha: 0, y: 200 });

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: "top top",
        end: "bottom+=560% top", // extended for extra phase
        scrub: 1.6,
        pin: true,
        anticipatePin: 1,
        invalidateOnRefresh: true
      },
      smoothChildTiming: true
    });

    function revealPair(circle, fadePrev, card, finalY){
      tl.to(circle, { autoAlpha: 1, scale: "+=0.22", duration: 1.0 }, "phase")
        .to(card,   { autoAlpha: 1, y: finalY, duration: 0.9 }, "<0.15")
        .to(fadePrev, { autoAlpha: 0.15, duration: 0.8, ease: "power1.out" }, "<0.10");
    }

    // Phase 1
    tl.to(c1, { autoAlpha: 1, scale: 0.70, duration: 1.0 }, "phase0")
      .to(card1, { autoAlpha: 1, y: 0, duration: 0.9 }, "<0.15")
      .to(c1, { autoAlpha: 0.18, duration: 0.8, ease: "power1.out" }, "+=0.15");

    // Phase 2
    revealPair(c2, c1, card2, 40);

    // Phase 3
    tl.to(c3, { autoAlpha: 1, scale: 1.18, duration: 1.1 }, "phase2+=0.15")
      .to(card3, { autoAlpha: 1, y: 80, duration: 0.9 }, "<0.15")
      .to(c2, { autoAlpha: 0.15, duration: 0.8, ease: "power1.out" }, "<0.10");

    // Phase 3.5 — NEW circle5 + card5
    tl.to(c5, { autoAlpha: 1, scale: 1.4, duration: 1.1 }, "phase3+=0.15")
      .to(card5, { autoAlpha: 1, y: 100, duration: 0.9 }, "<0.15")
      .to(c3, { autoAlpha: 0.15, duration: 0.8, ease: "power1.out" }, "<0.10");

    // Phase 4 — ONLY zoom-in cover for c4
    tl.to(c4, {
        autoAlpha: 1,
        scale: s4,
        duration: 1.2,
        ease: "power2.inOut"
      }, "phase4+=0.10")
      .to(card4, { autoAlpha: 1, y: 120, duration: 0.9 }, "<0.10")
      .to([c1, c2, c3, c5], { autoAlpha: 0, duration: 0.6, ease: "power1.out" }, "<0.0");

    return tl;
  }

  let master = buildTL();
  ScrollTrigger.addEventListener("refreshInit", () => {
    if (master) master.kill();
    master = buildTL();
  });

  // Optional: onion section fades in smoothly when it enters
  gsap.from(".onion-sec", {
    scrollTrigger: { trigger: ".onion-sec", start: "top 80%", toggleActions: "play none none reverse" },
    opacity: 0, y: 50, duration: 1
  });
</script>
  -->





  <script>
    gsap.registerPlugin(ScrollTrigger);
  
    const section = document.getElementById('circleStage');
    const stack   = document.getElementById('stack');
  
    const c1 = document.getElementById('c1');
    const c2 = document.getElementById('c2');
    const c3 = document.getElementById('c3');
    const c5 = document.getElementById('c5'); // NEW
    const c4 = document.getElementById('c4');
  
    const card1 = document.getElementById('card1');
    const card2 = document.getElementById('card2');
    const card3 = document.getElementById('card3');
    const card5 = document.getElementById('card5'); // NEW
    const card4 = document.getElementById('card4');
  
    gsap.defaults({ ease: "power2.out" });
  
    function coverScale(){
      const base = stack.offsetWidth;
      const target = Math.max(section.offsetWidth, section.offsetHeight);
      return (target / base) * 1.06; // tiny safety
    }
  
    function buildTL(){
      const s4 = coverScale();
  
      // init
      gsap.set([c1, c2, c3, c5], { autoAlpha: 0, scale: 0.5 });
      gsap.set(c4, { autoAlpha: 0, scale: 0.2 }); // zoom-only
      gsap.set([card1, card2, card3, card5, card4], { autoAlpha: 0, y: 200 });
  
      // shift circle 2 slightly upward
      gsap.set(c2, { y: -36 });
  
      const tl = gsap.timeline({
        scrollTrigger:{
          trigger: section,
          start: "top top",
          end: "bottom+=560% top",  // extended for the new phase
          scrub: 1.6,
          pin: true,
          anticipatePin: 1,
          invalidateOnRefresh: true
        },
        smoothChildTiming: true
      });
  
      function revealPair(circle, fadePrev, card, finalY){
        tl.to(circle, { autoAlpha:1, scale:"+=0.22", duration:1.0 }, "phase")
          .to(card,   { autoAlpha:1, y:finalY, duration:0.9 }, "<0.15")
          .to(fadePrev, { autoAlpha:0.15, duration:0.8, ease:"power1.out" }, "<0.10");
      }
  
      // Phase 1 — c1 + card1
      tl.to(c1, { autoAlpha:1, scale:0.70, duration:1.0 }, "phase0")
        .to(card1, { autoAlpha:1, y:0, duration:0.9 }, "<0.15")
        .to(c1, { autoAlpha:0.18, duration:0.8, ease:"power1.out" }, "+=0.15");
  
      // Phase 2 — c2 + card2 (c2 is nudged upward from init)
      revealPair(c2, c1, card2, 56);
  
      // Phase 3 — c3 + card3
      tl.to(c3, { autoAlpha:1, scale:1.18, duration:1.1 }, "phase2+=0.15")
        .to(card3, { autoAlpha:1, y:112, duration:0.9 }, "<0.15")
        .to(c2, { autoAlpha:0.15, duration:0.8, ease:"power1.out" }, "<0.10");
  
      // Phase 3.5 — NEW c5 + card5 (make c5 bigger than c3)
      tl.to(c5, { autoAlpha:1, scale:1.52, duration:1.1 }, "phase3+=0.15")
        .to(card5, { autoAlpha:1, y:168, duration:0.9 }, "<0.15")
        .to(c3, { autoAlpha:0.15, duration:0.8, ease:"power1.out" }, "<0.10");
  
      // Phase 4 — c4 zoom-cover only
      tl.to(c4, {
          autoAlpha: 1,
          scale: s4,
          duration: 1.2,
          ease: "power2.inOut"
        }, "phase4+=0.10")
        .to(card4, { autoAlpha:1, y:224, duration:0.9 }, "<0.10")
        .to([c1, c2, c3, c5], { autoAlpha:0, duration:0.6, ease:"power1.out" }, "<0.0");
  
      return tl;
    }
  
    let master = buildTL();
    ScrollTrigger.addEventListener("refreshInit", () => {
      if (master) master.kill();
      master = buildTL();
    });
  
    // Optional: onion section fade
    gsap.from(".onion-sec", {
      scrollTrigger: { trigger: ".onion-sec", start: "top 80%", toggleActions: "play none none reverse" },
      opacity: 0, y: 50, duration: 1
    });
  </script>
  



