    pointer-events:none;
    filter: blur(1px);
  }

  

  /* Onion graphic centered behind title */
  .onion-hero{ min-height: 440px; }
  .onion-bg{
    position:absolute; left:50%; top:50%;
    transform:translate(-50%, -58%);
    width:min(445px, 90vw); height:auto; opacity:.55; pointer-events:none;
  }
